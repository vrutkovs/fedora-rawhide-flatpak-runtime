{
    "ref": "base/org.vrutkovs.FedoraRuntime/x86_64/rawhide",

    "repos": ["fedora-rawhide"],

    "selinux": false,

    "documentation": false,

    "container": true,

    "automatic_version_prefix": "7",

    "postprocess-script": "treecompose-post.sh",

    "etc-group-members": ["wheel"],

    "ignore-removed-users": ["root"],
    "ignore-removed-groups": ["root"],
    "check-passwd": { "type": "file", "filename": "passwd" },
    "check-groups": { "type": "file", "filename": "group" },

    "packages": [
        /* base system */
        "fedora-release",
        "basesystem",
        "glibc",
        "bash",
        "setup",
        "coreutils",
        "util-linux",
        "rpm",
        "which",
        "curl",
        "findutils",
        "hicolor-icon-theme",
        "shared-mime-info",
        /* crypto and compression */
        "gnupg2",
        "xz",
        "gzip",
        "bzip2",
        /* image libraries */
        "libpng",
        "libjpeg-turbo",
        /* X11 libraries */
        "libICE",
        "libSM",
        "libX11",
        "libXScrnSaver",
        "libXau",
        "libXcomposite",
        "libXcursor",
        "libXdamage",
        "libXext",
        "libXfixes",
        "libXft",
        "libXi",
        "libXinerama",
        "libXpm",
        "libXrandr",
        "libXrender",
        "libXt",
        "libXtst",
        "libXv",
        "libXxf86vm",
        "xcb-util",
        "libXfont",
        "libfontenc",
        "xorg-x11-font-utils",
        "ttmkfdir",
        "dejavu-fonts-common",
        /* mesa */
        "mesa-libEGL",
        "mesa-libglapi",
        "mesa-libgbm",
        "mesa-libGL",
        "mesa-dri-drivers",
        "mesa-libGLU",
        "libGLEW",
        /* pulseaudio */
        "pulseaudio-libs",
        "pulseaudio-libs-glib2",
        /* gnome */
        "gtk3",
        "gnome-common",
        "gobject-introspection",
        "libcanberra",
        "gnome-desktop3",
        "vala",
        "desktop-file-utils",
        "itstool",
        "geoclue2",
        "geocode-glib",
        "gsound",
        "libappstream-glib",
        "gettext",
        "json-glib",
        "libsoup",
        "intltool",
        "gdk-pixbuf2",
        "xkeyboard-config",
        "iso-codes",
        "libical",
        "nspr",
        "gcr",
        "libsecret",
        "libsoup",
        "libxml2",
        "nss",
        "sqlite",
        "webkitgtk4",
        "gperf",
        "libdb",
        "gmp",
        "adwaita-icon-theme",
        "adwaita-cursor-theme"
    ]
}
